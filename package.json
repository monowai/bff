{
  "name": "pru-digi-bff",
  "version": "1.0.0",
  "private": true,
  "main": "index.ts",
  "license": "UNLICENSED",
  "engines": {
    "node": ">= 8.0.0"
  },
  "scripts": {
    "clean": "rm -rf jest.json build coverage",
    "build": "parcel build src/index.ts",
    "start": "export APP_MODE=dev && nodemon --exec \"babel-node src/index.ts\" --extensions \".ts,.tsx\" --watch",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "prettier": "prettier --write 'src/**/*.ts*'  && yarn lint",
    "prettier:check": "prettier  --check 'src/**/*.ts*' && yarn lint",
    "lint": "eslint 'src/**/*.ts*' && yarn lint-md",
    "type-check": "tsc --noEmit",
    "lint-md": "remark ."
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "connect-timeout": "^1.9.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-list-endpoints": "^4.0.1",
    "helmet": "^3.21.1",
    "http-status": "^1.3.2",
    "middleware": "^1.0.0",
    "morgan": "^1.9.1",
    "ramda": "^0.26.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/helper-plugin-utils": "^7.0.0",
    "@babel/node": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.4",
    "@types/connect-timeout": "^0.0.34",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.15",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.12",
    "@types/ramda": "^0.26.15",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "lodash": "^4.17.15",
    "nodemon": "^1.19.1",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "remark-cli": "^7.0.0",
    "remark-lint": "^6.0.5",
    "remark-preset-lint-recommended": "^3.0.3",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*test.js"
    ],
    "testResultsProcessor": "./node_modules/jest-bamboo-formatter",
    "watchPathIgnorePatterns": [
      "<rootDir>/jest*.json"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/*"
    ],
    "delay": "1000"
  }
}
